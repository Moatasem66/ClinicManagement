@model IEnumerable<DoctorViewModel>
@{
    ViewData["Title"] = "Doctor List";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark">All Doctors</h2>
        <a asp-controller="Doctor" asp-action="Create" class="btn btn-outline-primary">
            <i class="fas fa-plus"></i> Add New Doctor
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(d => d.Name)</th>
                        <th>@Html.DisplayNameFor(d => d.PhoneNumber)</th>
                        <th>@Html.DisplayNameFor(d => d.Specification)</th>
                        <th>@Html.DisplayNameFor(d => d.ClinicName)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctor in Model)
                    {
                        <tr>
                            <td>@doctor.Name</td>
                            <td>@doctor.PhoneNumber</td>
                            <td>@doctor.Specification</td>
                            <td>@doctor.ClinicName</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@doctor.Id" class="btn btn-sm btn-warning me-1">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a asp-action="Update" asp-route-id="@doctor.Id" class="btn btn-sm btn-success me-1">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
            <h5>No doctors available.</h5>
            <p>Please add a doctor using the button above.</p>
        </div>
    }
</div>
