@model CreateUpdateDoctorViewModel
@{
    ViewData["Title"] = "Add New Doctor";
}
<div class="container py-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-body-secondary text-dark">
            <h4 class="mb-0">
                Add New Doctor
            </h4>
        </div>
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter doctor name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Egyptian phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Specification" class="form-label fw-semibold"></label>
                    <input asp-for="Specification" class="form-control" placeholder="Enter specialization" />
                    <span asp-validation-for="Specification" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ClinicId" class="form-label fw-semibold">Select Clinic</label>
                    <select asp-for="ClinicId" class="form-select" asp-items="Model.Clinics">
                        <option value="">-- Select Clinic --</option>
                    </select>
                    <span asp-validation-for="ClinicId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Doctor
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>