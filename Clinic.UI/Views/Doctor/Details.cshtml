@model DoctorViewModel

@{
    ViewData["Title"] = "Doctor Details";
}

<div class="container py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-body-secondary text-dark d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                 Doctor Details
            </h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Phone Number</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Specialization</dt>
                <dd class="col-sm-9">@Model.Specification</dd>

                <dt class="col-sm-3">Clinic</dt>
                <dd class="col-sm-9">@Model.ClinicName</dd>
            </dl>
        </div>
        <div class="mt-4 d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
