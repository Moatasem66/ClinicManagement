@model AppointmentViewModel

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"> Delete Appointment</h4>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this appointment?</h5>

            <dl class="row mt-3">
                <dt class="col-sm-3">Patient Name</dt>
                <dd class="col-sm-9">@Model.PatientName</dd>

                <dt class="col-sm-3">Phone Number</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Start Time</dt>
                <dd class="col-sm-9">@Model.StartTime.ToString("hh\\:mm")</dd>

                <dt class="col-sm-3">End Time</dt>
                <dd class="col-sm-9">@Model.EndTime.ToString("hh\\:mm")</dd>

                <dt class="col-sm-3">Doctor</dt>
                <dd class="col-sm-9">@Model.DoctorName</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
