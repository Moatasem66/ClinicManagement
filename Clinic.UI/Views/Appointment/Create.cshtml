@model CreateUpdateAppointmentViewModel

@{
    ViewData["Title"] = "Add New Appointment";
}

<div class="container py-1">
    <div class="card border-0 shadow-lg rounded-4">
        <div class="card-header bg-body-secondary text-dark rounded-top-4">
            <h4 class="mb-0 d-flex align-items-center">
                <i class="fas fa-calendar-plus me-2"></i> Add New Appointment
            </h4>
        </div>

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
                @ViewData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card-body px-5 py-4">
            <form asp-action="Create" method="post">
                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="PatientName" class="form-label fw-semibold">Patient Name</label>
                        <input asp-for="PatientName" class="form-control form-control-lg shadow-sm" placeholder="Enter patient's name" />
                        <span asp-validation-for="PatientName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control form-control-lg shadow-sm" placeholder="Enter phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Date" class="form-label fw-semibold">Date</label>
                        <input asp-for="Date" class="form-control form-control-lg shadow-sm" type="date" />
                        <span asp-validation-for="Date" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="StartTime" class="form-label fw-semibold">Start Time</label>
                        <input asp-for="StartTime" class="form-control form-control-lg shadow-sm" type="time" />
                        <span asp-validation-for="StartTime" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="EndTime" class="form-label fw-semibold">End Time</label>
                        <input asp-for="EndTime" class="form-control form-control-lg shadow-sm" type="time" />
                        <span asp-validation-for="EndTime" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="DoctorId" class="form-label fw-semibold">Select Doctor</label>
                        <select asp-for="DoctorId" asp-items="Model.Doctors" class="form-select form-select-lg shadow-sm">
                            <option disabled selected>-- Select Doctor --</option>
                        </select>
                        <span asp-validation-for="DoctorId" class="text-danger small"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 shadow-sm">
                        <i class="fas fa-arrow-left me-2"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success btn-lg px-4 shadow-sm">
                        <i class="fas fa-save me-2"></i> Save Appointment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
