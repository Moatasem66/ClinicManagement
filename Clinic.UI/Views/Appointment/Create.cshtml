@model CreateUpdateAppointmentViewModel

@{
    ViewData["Title"] = "Add New Appointment";
}

<div class="container py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-body-secondary text-dark">
            <h4 class="mb-0"> Add New Appointment</h4>
        </div>
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="PatientName" class="form-label fw-semibold"></label>
                        <input asp-for="PatientName" class="form-control" placeholder="Enter patient's name" />
                        <span asp-validation-for="PatientName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Date" class="form-label fw-semibold"></label>
                        <input asp-for="Date" class="form-control" type="date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="StartTime" class="form-label fw-semibold"></label>
                        <input asp-for="StartTime" class="form-control" type="time" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="EndTime" class="form-label fw-semibold"></label>
                        <input asp-for="EndTime" class="form-control" type="time" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="DoctorId" class="form-label fw-semibold"></label>
                    <select asp-for="DoctorId" asp-items="Model.Doctors" class="form-select">
                        <option disabled selected>-- Select Doctor --</option>
                    </select>
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Appointment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
