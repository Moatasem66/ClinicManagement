@model AppointmentViewModel

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-body-secondary text-dark">
            <h4 class="mb-0"> Appointment Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Patient Name</dt>
                <dd class="col-sm-9">@Model.PatientName</dd>

                <dt class="col-sm-3">Phone Number</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">Appointment Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Start Time</dt>
                <dd class="col-sm-9">@Model.StartTime.ToString("hh\\:mm")</dd>

                <dt class="col-sm-3">End Time</dt>
                <dd class="col-sm-9">@Model.EndTime.ToString("hh\\:mm")</dd>

                <dt class="col-sm-3">Doctor</dt>
                <dd class="col-sm-9">@Model.DoctorName</dd>
            </dl>

            <div class="mt-4 d-flex justify-content-end">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
