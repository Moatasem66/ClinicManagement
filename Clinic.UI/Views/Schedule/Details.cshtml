@model ScheduleViewModel

@{
    ViewData["Title"] = "Schedule Details";
}

<div class="container py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-body-secondary text-dark">
            <h4 class="mb-0">
                 Schedule Details
            </h4>
        </div>
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3">Doctor Name</dt>
                <dd class="col-sm-9">@Model.DoctorName</dd>

                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">End Date</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3">Start Time</dt>
                <dd class="col-sm-9">@Model.StartTime.ToString("hh\\:mm")</dd>

                <dt class="col-sm-3">End Time</dt>
                <dd class="col-sm-9">@Model.EndTime.ToString("hh\\:mm")</dd>
            </dl>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
