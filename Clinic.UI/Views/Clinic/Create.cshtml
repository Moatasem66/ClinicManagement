@model CreateUpdateClinicViewModel

@{
    ViewData["Title"] = "Add New Clinic";
}
<div class="container py-2">
    <div class="card border-0 shadow-lg rounded-4">
        <div class="card-header bg-body-secondary text-dark rounded-top-4">
            <h4 class="mb-0 d-flex align-items-center">
                <i class="fas fa-hospital-alt me-2"></i> Add New Clinic
            </h4>
        </div>

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
                @ViewData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card-body px-5 py-4">
            <form asp-action="Create" method="post">
                <div class="mb-4">
                    <label asp-for="Name" class="form-label fw-bold">Clinic Name</label>
                    <input asp-for="Name" class="form-control form-control-lg shadow-sm" placeholder="Enter clinic name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Address" class="form-label fw-bold">Clinic Address</label>
                    <input asp-for="Address" class="form-control form-control-lg shadow-sm" placeholder="Enter clinic address" />
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control form-control-lg shadow-sm" placeholder="Enter phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 shadow-sm">
                        <i class="fas fa-arrow-left me-2"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success btn-lg px-4 shadow-sm">
                        <i class="fas fa-save me-2"></i> Save Clinic
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
