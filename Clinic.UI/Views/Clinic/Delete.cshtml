@model ClinicViewModel

@{
    ViewData["Title"] = "Delete Clinic";
}

<div class="container py-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                 Delete Clinic
            </h4>
        </div>

        <div class="card-body">
            <p class="text-danger fw-semibold mb-4">
                Are you sure you want to delete this clinic? This action cannot be undone.
            </p>

            <dl class="row">
                <dt class="col-sm-3 fw-semibold">Clinic Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-semibold">Address:</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3 fw-semibold">Phone Number:</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
